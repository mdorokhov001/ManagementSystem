<?import javafx.scene.shape.Line?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="orders" stylesheets="@../../../../styles/admin_dash.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.main.managementsystem.OrdersController">
   <BorderPane prefHeight="200.0" prefWidth="200.0" styleClass="main_container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <top>
         <VBox prefHeight="180.0" prefWidth="800.0" styleClass="top_container" BorderPane.alignment="CENTER">
            <HBox prefHeight="50.0" prefWidth="800.0" styleClass="top_panel">
               <Label styleClass="name_form" text="Заявки">
                  <HBox.margin>
                     <Insets left="20.0" top="18.0" />
                  </HBox.margin>
               </Label>
            </HBox>
            <Line endX="699.0" startX="-100.0" styleClass="line" />
            <HBox prefHeight="35.0" prefWidth="800.0" styleClass="filter_lbl_container">
               <Label text="Поиск">
                  <HBox.margin>
                     <Insets />
                  </HBox.margin>
               </Label>
               <Label text="Тип заявки">
                  <HBox.margin>
                     <Insets left="90.0" />
                  </HBox.margin>
               </Label>
               <Label text="Статус">
                  <HBox.margin>
                     <Insets left="65.0" />
                  </HBox.margin>
               </Label>
               <Label text="Дата создания">
                  <HBox.margin>
                     <Insets left="15.0" />
                  </HBox.margin>
               </Label>
               <Label text="Ответственный">
                  <HBox.margin>
                     <Insets left="35.0" />
                  </HBox.margin>
               </Label>
            </HBox>
            <HBox prefHeight="88.0" prefWidth="800.0" styleClass="filter_container">
               <TextField fx:id="searchField" prefWidth="150.0" styleClass="filter_fld">
                  <HBox.margin>
                     <Insets left="20.0" />
                  </HBox.margin>
               </TextField>
               <ComboBox fx:id="ordersTypeCombobox" prefWidth="160.0" styleClass="filter_combobox" />
               <VBox prefHeight="200.0" prefWidth="80.0" styleClass="vbox">
                  <CheckBox fx:id="openCheckbox" mnemonicParsing="false" styleClass="filter_checkbox" text="Открыта" />
                  <CheckBox fx:id="inProgressCheckbox" mnemonicParsing="false" styleClass="filter_checkbox" text="В работе" />
                  <CheckBox fx:id="closedCheckbox" mnemonicParsing="false" styleClass="filter_checkbox" text="Закрыта" />
               </VBox>
               <VBox prefHeight="200.0" prefWidth="150.0" styleClass="vbox">
                  <DatePicker fx:id="dateFrom" promptText="От" styleClass="filter_datepicker" />
                  <DatePicker fx:id="dateTo" promptText="До" styleClass="filter_datepicker">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </DatePicker>
               </VBox>
               <ComboBox fx:id="assigneeCombobox" prefWidth="160.0" styleClass="filter_combobox" />
            </HBox>
         </VBox>
      </top>
      <center>
         <TableView fx:id="ordersTable" prefHeight="408.0" prefWidth="800.0" styleClass="table" BorderPane.alignment="CENTER">
            <columns>
               <TableColumn prefWidth="109.0" text="Выбрать">
                  <graphic>
                     <CheckBox fx:id="selectAllRowCheckbox" mnemonicParsing="false" prefHeight="16.0" prefWidth="15.0" styleClass="checkbox" />
                  </graphic>
               </TableColumn>
               <TableColumn prefWidth="77.0" text="№" />
               <TableColumn minWidth="4.0" prefWidth="107.0" text="Название" />
               <TableColumn minWidth="0.0" prefWidth="102.0" text="Тип" />
               <TableColumn minWidth="0.0" prefWidth="95.0" text="Статус" />
               <TableColumn minWidth="0.0" prefWidth="122.0" text="Создатель" />
               <TableColumn minWidth="0.0" prefWidth="148.0" text="Дата создания" />
            </columns>
         </TableView>
      </center>
   </BorderPane>
</AnchorPane>
